Options -Indexes
ErrorDocument 404 /404.html

ExpiresActive On
ExpiresByType image/jpg "access plus 1 year"
ExpiresByType image/jpeg "access plus 1 year"
ExpiresByType image/gif "access plus 1 year"
ExpiresByType image/png "access plus 1 year"
ExpiresByType text/css "access plus 1 month"
ExpiresByType application/javascript "access plus 1 month"
ExpiresByType text/html "access plus 7 days"

RewriteEngine On
RewriteRule ^(\d{4})/?$ /archive/$1/ [R=301,NC,L]
RewriteRule ^(\d{4})-\d{2}/?$ /archive/$1/ [R=301,NC,L]
RewriteRule ^(\d{4})/(\d{2})/?$ /archive/$1/$2/ [R=301,NC,L]
RewriteRule ^page/ /archive/ [R=301,NC,L]
RewriteRule ^feed/ /atom.xml [R=301,NC,L]
RewriteRule ^email/?$ /contact/ [R=301,NC,L]
RewriteRule ^category/(.*)$ /$1 [R=301,NC,L]

# Redirects to paulhayes.photography
RewriteRule ^photography/?$ https://paulhayes.photography [R=301,NC,L]
RewriteRule ^category/photography/?$ https://paulhayes.photography [R=301,NC,L]
RewriteRule ^2014-09/hong-kong/$ https://paulhayes.photography/2014-09/hong-kong/ [R=301,NC,L]
RewriteRule ^2014-09/longsheng-rice-terraces/$ https://paulhayes.photography/2014-09/longsheng-rice-terraces/ [R=301,NC,L]
RewriteRule ^2014-09/mirror-lake-jiuzhaigou/$ https://paulhayes.photography/2014-09/mirror-lake-jiuzhaigou/ [R=301,NC,L]
RewriteRule ^2014-09/striped-blue-crow-butterfly/$ https://paulhayes.photography/2014-09/striped-blue-crow-butterfly/ [R=301,NC,L]
RewriteRule ^2014-08/dawn-ascent/$ https://paulhayes.photography/2014-08/dawn-ascent/ [R=301,NC,L]
RewriteRule ^2014-07/lightning-brighton-station/$ https://paulhayes.photography/2014-07/lightning-brighton-station/ [R=301,NC,L]
RewriteRule ^2014-07/lightning-brighton/$ https://paulhayes.photography/2014-07/lightning-brighton/ [R=301,NC,L]
RewriteRule ^2014-06/tawny-owl/$ https://paulhayes.photography/2014-06/tawny-owl/ [R=301,NC,L]
RewriteRule ^2014-06/fox/$ https://paulhayes.photography/2014-06/fox/ [R=301,NC,L]
RewriteRule ^2014-06/fox-profile/$ https://paulhayes.photography/2014-06/fox-profile/ [R=301,NC,L]
RewriteRule ^2014-06/polecat/$ https://paulhayes.photography/2014-06/polecat/ [R=301,NC,L]
RewriteRule ^2014-06/harvest-mouse-on-wheat/$ https://paulhayes.photography/2014-06/harvest-mouse-on-wheat/ [R=301,NC,L]
RewriteRule ^2014-06/harvest-mouse/$ https://paulhayes.photography/2014-06/harvest-mouse/ [R=301,NC,L]
RewriteRule ^2014-03/great-argus/$ https://paulhayes.photography/2014-03/great-argus/ [R=301,NC,L]
RewriteRule ^2014-03/sunbird/$ https://paulhayes.photography/2014-03/sunbird/ [R=301,NC,L]
RewriteRule ^2014-03/kota-kinabalu-sunset/$ https://paulhayes.photography/2014-03/kota-kinabalu-sunset/ [R=301,NC,L]
RewriteRule ^2014-03/kuching/$ https://paulhayes.photography/2014-03/kuching/ [R=301,NC,L]
RewriteRule ^2014-01/brighton-west-pier/$ https://paulhayes.photography/2014-01/brighton-west-pier/ [R=301,NC,L]
RewriteRule ^2013-10/first-dance/$ https://paulhayes.photography/2013-10/first-dance/ [R=301,NC,L]
RewriteRule ^2013-06/brighton-pavilion/$ https://paulhayes.photography/2013-06/brighton-pavilion/ [R=301,NC,L]
RewriteRule ^2011-11/iguacu-falls/$ https://paulhayes.photography/2011-11/iguacu-falls/ [R=301,NC,L]

# Avoid www. in URL
RewriteBase /
RewriteCond %{HTTP_HOST} ^www\.(.*)$ [NC]
RewriteRule ^(.*)$ https://%1/$1 [R=301,L]

# Redirect http to https
RewriteCond %{SERVER_PORT} 80
RewriteRule ^(.*)$ https://%{HTTP_HOST}/$1 [R,L]

AddCharset UTF-8 .html

AddOutputFilterByType DEFLATE text/plain
AddOutputFilterByType DEFLATE text/html
AddOutputFilterByType DEFLATE text/xml
AddOutputFilterByType DEFLATE text/css
AddOutputFilterByType DEFLATE application/xml
AddOutputFilterByType DEFLATE application/xhtml+xml
AddOutputFilterByType DEFLATE application/rss+xml
AddOutputFilterByType DEFLATE application/javascript
AddOutputFilterByType DEFLATE application/x-javascript
