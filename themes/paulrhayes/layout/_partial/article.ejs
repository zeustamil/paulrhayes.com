<article class="article" role="main">
  <header class="article-header">
    <h1 class="main-content-title entry-title">
      <%= post.title %>
    </h1>
  </header>
  <div class="article-meta" role="contentinfo">
    <time datetime="<%= date_xml(post.date) %>" class="entry-date published" pubdate>
      <%= date(post.date, 'D MMM') %>
      <a href="/archive/<%= date(post.date, 'YYYY') %>"><%= date(post.date, 'YYYY') %></a>
    </time>
    <%- partial('post/nav') %>
  </div>
  <div class="article-content entry-content">
    <%- post.content %>
  </div>
  <%- partial('post/article-footer') %>
</article>
